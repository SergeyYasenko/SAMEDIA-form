.main
   margin 20px
   padding 20px
   height calc(100vh - 40px)
   display flex
   justify-content center
   border 1px, solid, #CFAA59
   position relative
   box-sizing border-box

   &__bg
      background url("@img/bg.svg") no-repeat, #fff
      position absolute
      width 102px
      height 103px
      z-index 1

      &:nth-child(1)
         left -4px
         top -4px

      &:nth-child(2)
         right -4px
         top -4px
         transform rotate(90deg)

      &:nth-child(3)
         right -4px
         bottom -4px
         transform rotate(180deg)

      &:nth-child(4)
         left -4px
         bottom -4px
         transform rotate(270deg)

      @media (max-width 450px)
         width 80px
         height 80px

         &:nth-child(1)
            left -7px
            top -7px

         &:nth-child(2)
            right -7px
            top -7px

         &:nth-child(3)
            right -7px
            bottom -7px

         &:nth-child(4)
            left -7px
            bottom -7px

.section

   &__form
      max-width 457px
      display flex
      flex-direction column
      align-items center
      margin auto
      text-align center
      @media (max-width 768px)
         max-width none
         width 100%

   &__logo
      width 208px
      height 180px


   &__title
      font-family "Roboto", sans-serif
      font-weight 700
      line-height 37.5px
      font-size 32px
      color #363636
      margin-top 8px
      margin-bottom 24px
      letter-spacing -1px

.form

   &__section
      box-sizing border-box

   &__field-block
      @media (max-width 768px)
         max-width none
         width 100%

   &__field
      position relative
      display flex
      flex-direction row
      justify-content center
      align-items center
      gap 11px
      border 1px solid rgba(0, 0, 0, 0.15)
      border-radius 4px
      width 457px
      height 48px
      margin-bottom 16px
      padding-left 11px
      @media (max-width 768px)
         flex 1 1 auto
         width 100%

      &:last-of-type
         margin-bottom 0

   &__field_error
      border 1px solid rgba(246, 84, 84, 1)
      color rgba(246, 84, 84, 1)
      &:last-of-type
         margin-bottom 16px

   &__input
      font-size 14px
      font-style normal
      font-weight 400
      line-height 18px
      color inherit
      border none
      width 100%
      height 30px
      outline none
      padding 0
      padding-right 20px
      margin 0

      &::placeholder
         color rgba(0, 0, 0, 0.15)

   &__icon
      min-width 26px
      height 26px

   &__icon_email
      background-image url(@img/person.svg)

   &__icon_password
      background-image url(@img/key.svg)

   &__error
      color #F65454
      font-family "Roboto", sans-serif
      font-size 12px
      font-style italic
      font-weight 400
      line-height 16px
      display inline-block
      margin-bottom 16px

   &__button
      outline none
      cursor pointer
      padding 0
      margin 0
      border none
      border-radius 4px
      background linear-gradient(90deg, #B7903B 0%, #CFAA59 100%)
      color #fff
      font-size 14px
      font-style normal
      font-weight 500
      line-height normal
      width 175px
      height 48px

.form_hidden
   visibility hidden

.preloader
   background-color #333
   opacity 0.6
   position fixed
   top -20px
   left -20px
   width 103%
   height 110vh
   z-index 3
   visibility hidden

   &&.preloader_opened
      visibility visible

.loader
   position fixed
   top calc(50% - 50px)
   left calc(50% - 50px)
   width 50px
   padding 8px
   aspect-ratio 1
   border-radius 50%
   background linear-gradient(90deg, #B7903B 0%, #CFAA59 100%)
   --_m conic-gradient(#0000 10%, #000),
      linear-gradient(#000 0 0) content-box
   -webkit-mask var(--_m)
   mask var(--_m)
   -webkit-mask-composite source-out
   mask-composite subtract
   animation lod 1s infinite linear

@keyframes lod
   to
      transform rotate(1turn)

.preloader_open
   visibility visible

